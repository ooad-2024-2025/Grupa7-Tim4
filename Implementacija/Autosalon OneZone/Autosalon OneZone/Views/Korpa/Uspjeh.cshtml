@model Autosalon_OneZone.Models.Narudzba
@{
    ViewData["Title"] = "Uspješna kupovina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0"><i class="bi bi-check-circle-fill me-2"></i>Kupovina uspješna!</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>

                    <h3 class="card-title text-center mb-4">Hvala na kupovini!</h3>

                    <div class="alert alert-info mb-4">
                        <p class="mb-1"><strong>Broj narudžbe:</strong> #@Model.NarudzbaID</p>
                        <p class="mb-1"><strong>Datum:</strong> @Model.DatumNarudzbe.ToString("dd.MM.yyyy. HH:mm")</p>
                        <p class="mb-0"><strong>Ukupan iznos:</strong> €@Model.UkupnaCijena.ToString("N2")</p>
                    </div>

                    <h4>Detalji kupovine</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Vozilo</th>
                                    <th>Cijena</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stavka in Model.StavkeKorpe)
                                {
                                    <tr>
                                        <td>@stavka.Vozilo.Marka @stavka.Vozilo.Model (@stavka.Vozilo.Godiste)</td>
                                        <td>€@stavka.CijenaStavke.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4">
                        <p>Dodatne informacije o preuzimanju vozila dobit ćete putem e-maila.</p>
                        <p>Za sva pitanja možete nas kontaktirati na <strong>info@autosalon.com</strong> ili pozivom na <strong>+387 33 123 456</strong>.</p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a href="@Url.Action("Index", "Vozilo")" class="btn btn-primary">Povratak na vozila</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
